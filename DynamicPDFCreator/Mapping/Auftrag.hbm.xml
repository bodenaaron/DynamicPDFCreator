<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns = "urn:nhibernate-mapping-2.2" assembly="DynamicPDFCreator" namespace="DynamicPDFCreator">

  <class name = "Auftrag" table="tblAuftraege">
    <id name = "id" column="idAuftrag">
      <generator class = "identity"/>
    </id>
    <property name = "smNummer" column="SM_Nummer"/>

    <many-to-one name = "projekt" column = "idProjekt"/>

    <set name = "pdfs" table = "tblPDFs" lazy="false">
      <key column = "`auftrag´"/>
      <one-to-many class = "DBpdf" />
    </set>
  </class>

</hibernate-mapping>